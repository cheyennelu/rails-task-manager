<h1>Add new Task</h1>

<%= form_for @task do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, value: @task.title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_field :details, value: @task.details %>
  </div>
  <%= f.submit %>
<% end %>

<ul>
<% if @task.errors %>
  <% @task.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>
</ul>
