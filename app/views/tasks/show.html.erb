<div class='page-title'><h1><%= @task.title %></h1></div>
<button><%= link_to 'Edit this Task', edit_task_path(@task) %> </button>
<div class="detail-container">
  <p> <%= @task.details %> </p>
</div>
<% if @task.completed == true %>
  <p> ✅ This task is completed!</p>
<% else %>
  <p> ❎ This task is not completed yet.</p>
<% end %>
<div class="lower-link"><p><i class="fas fa-chevron-left"></i><%= link_to 'Back to list', tasks_path %></p></div>
